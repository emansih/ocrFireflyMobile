<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AutoFillFireflyMobile" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/color_one</item>
        <item name="colorPrimaryVariant">@color/color_two</item>
        <item name="colorOnPrimary">@color/color_three</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_four</item>
        <item name="colorSecondaryVariant">@color/color_five</item>
        <item name="colorOnSecondary">@color/color_six</item>

        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>   <!-- //this -->
    </style>


    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

</resources>